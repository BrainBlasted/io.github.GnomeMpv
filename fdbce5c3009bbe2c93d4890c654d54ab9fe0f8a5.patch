Subject: [PATCH] GmpvVideoArea: chain up to the parent class' implementation
 of destroy()

Fixes #374.
---
 src/gmpv_video_area.c | 1 +
 1 file changed, 1 insertion(+)

diff --git a/src/gmpv_video_area.c b/src/gmpv_video_area.c
index 35adea6..857920c 100644
--- a/src/gmpv_video_area.c
+++ b/src/gmpv_video_area.c
@@ -121,6 +121,7 @@ static void get_property(	GObject *object,
 static void destroy(GtkWidget *widget)
 {
 	g_source_clear(&GMPV_VIDEO_AREA(widget)->timeout_tag);
+	GTK_WIDGET_CLASS(gmpv_video_area_parent_class)->destroy(widget);
 }
 
 static void set_cursor_visible(GmpvVideoArea *area, gboolean visible)
