{
  "app-id": "io.github.GnomeMpv",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.26",
  "sdk": "org.gnome.Sdk",
  "command": "gnome-mpv",
  "rename-icon": "gnome-mpv",
  "copy-icon": true,
  "finish-args": [
      "--share=ipc",
      "--socket=x11",
      "--socket=wayland",
      "--device=dri",
      "--share=network",
      "--socket=pulseaudio",
      "--talk-name=org.gtk.vfs",
      "--talk-name=org.gtk.vfs.*",
      "--talk-name=org.gnome.SettingsDaemon",
      "--talk-name=org.gnome.SettingsDaemon.MediaKeys",
      "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
      "--filesystem=xdg-run/dconf",
      "--filesystem=~/.config/dconf:ro",
      "--talk-name=ca.desrt.dconf",
      "--own-name=org.mpris.MediaPlayer2.GnomeMpv.*",
      "--env=SSL_CERT_FILE=/etc/ssl/certs/ca-certificates.crt",
      "--env=LC_NUMERIC=C"
  ],
  "modules": [
    {
      "name": "gnome-mpv",
      "buildsystem": "meson",
      "builddir": true,
      "config-opts": ["--buildtype=release"],
      "cleanup": ["/share/man"],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/gnome-mpv/gnome-mpv/archive/v0.13.tar.gz",
          "sha256": "ec3e504a20f56a746a1a53b8fdf4dfaa2c74da189b9fa9c0c9b6c5ac4193244b"
        },
        {
          "type": "patch",
          "path": "0d73b33d60050fd32bf8fae77d831548970a0b69.patch"
        },
        {
            "type" : "shell",
            "commands" : [
                "sed -i 's/ICON_NAME \"gnome-mpv\"/ICON_NAME \"io.github.GnomeMpv\"/' src/gmpv_def.h"
            ]
        }
      ],
      "modules": [
        {
          "name": "libmpv",
          "cleanup": [ "/include", "/lib/pkgconfig" ],
          "buildsystem": "simple",
          "build-commands": [
            "python3 waf configure --prefix=/app --enable-libmpv-shared --disable-cplayer --disable-build-date --disable-oss-audio --disable-alsa",
            "python3 waf build",
            "python3 waf install"
          ],
          "sources": [
            {
              "type": "archive",
              "url": "https://github.com/mpv-player/mpv/archive/v0.28.0.tar.gz",
              "sha256": "eeac559d422357470040b83d8cdabec74b8a64ce8f50d5ee421dd3e4c73457b4"
            },
            {
              "type": "file",
              "url": "https://waf.io/waf-1.9.8",
              "sha256": "167dc42bab6d5bd823b798af195420319cb5c9b571e00db7d83df2a0fe1f4dbf",
              "dest-filename": "waf"
            }
          ],
          "modules": [
            "org.ffmpeg.FFmpeg.json",
            "org.luajit.Luajit.json",
            {
              "name": "libass",
              "cleanup": [ "/include", "/lib/*.la", "/lib/pkgconfig" ],
              "config-opts": [ "--disable-static" ],
              "sources": [{
                "type": "archive",
                "url": "https://github.com/libass/libass/releases/download/0.14.0/libass-0.14.0.tar.xz",
                "sha256": "881f2382af48aead75b7a0e02e65d88c5ebd369fe46bc77d9270a94aa8fd38a2"
              }],
              "modules": [{
                "name": "fribidi",
                "cleanup": [ "/bin", "/include", "/lib/pkgconfig", "/lib/*.la", "/share/man" ],
                "sources": [{
                  "type": "archive",
                  "url": "https://dl.tingping.se/mirror/fribidi-0.19.7.tar.bz2",
                  "sha256": "08222a6212bbc2276a2d55c3bf370109ae4a35b689acbc66571ad2a670595a8e"
                }]
              }]
            },
            {
              "name": "youtube-dl",
              "no-autogen": true,
              "cleanup": [ "/etc", "/man", "/share" ],
              "build-options": { "env": { "PREFIX": "/app" } },
              "sources": [{
                "type": "archive",
                "url": "https://github.com/rg3/youtube-dl/releases/download/2018.01.07/youtube-dl-2018.01.07.tar.gz",
                "sha256": "280d11c565978d735bae954916390810df1217824bfe704181f1d93ad2f4e1b6"
              }]
            },
            {
              "name": "uchardet",
              "buildsystem": "cmake-ninja",
              "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DBUILD_STATIC=0"
              ],
              "cleanup": [
                "/bin",
                "/include",
                "/lib/pkgconfig",
                "/share/man"
              ],
              "sources": [
                {
                  "type": "archive",
                  "url": "https://www.freedesktop.org/software/uchardet/releases/uchardet-0.0.6.tar.xz",
                  "sha256": "8351328cdfbcb2432e63938721dd781eb8c11ebc56e3a89d0f84576b96002c61"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
